<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="adcdev.simrev.simregrevolution.MainActivity"
    tools:showIn="@layout/app_bar_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <android.support.v4.view.ViewPager
                                    android:id="@+id/viewPager"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp">
                                </android.support.v4.view.ViewPager>

                                <LinearLayout
                                    android:id="@+id/SliderDots"
                                    android:layout_below="@id/viewPager"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </LinearLayout>
                        </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="Metode SMS"
                                    android:layout_gravity="center"
                                    android:textAlignment="center" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center_horizontal"
                                            android:orientation="vertical">
                                                <Button
                                                    android:id="@+id/btn_tsel"
                                                    android:background="@color/tsel"
                                                    android:textColor="@android:color/white"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="8dp"
                                                    android:text="Telkomsel" />

                                                <Button
                                                    android:id="@+id/btn_xl"
                                                    android:background="@color/xl"
                                                    android:textColor="@android:color/white"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="8dp"
                                                    android:layout_marginLeft="8dp"
                                                    android:text="XL/Axis" />

                                                <Button
                                                    android:id="@+id/btn_smart"
                                                    android:background="@color/smart"
                                                    android:textColor="@android:color/white"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="8dp"
                                                    android:layout_marginLeft="8dp"
                                                    android:layout_marginBottom="16dp"
                                                    android:text="Smartfren" />
                                        </LinearLayout>

                                        <View
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="4dp"
                                            android:layout_width="0dp" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center_horizontal"
                                            android:orientation="vertical">
                                                <Button
                                                    android:id="@+id/btn_isat"
                                                    android:background="@color/isat"
                                                    android:textColor="@android:color/white"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginRight="8dp"
                                                    android:text="Indosat" />

                                                <Button
                                                    android:id="@+id/btn_tri"
                                                    android:background="@color/tri"
                                                    android:textColor="@android:color/white"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="8dp"
                                                    android:layout_marginRight="8dp"
                                                    android:text="Tri" />
                                                <Button
                                                    android:id="@+id/btn_bolt"
                                                    android:background="@color/bolt"
                                                    android:textColor="@android:color/white"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="8dp"
                                                    android:layout_marginRight="8dp"
                                                    android:layout_marginBottom="16dp"
                                                    android:text="Bolt" />
                                        </LinearLayout>
                                </LinearLayout>
                        </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Metode Online"
                            android:layout_gravity="center|top"
                            android:textAlignment="center"

                            />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:layout_marginTop="28dp"
                            android:layout_marginBottom="16dp"
                            android:scrollbars="none"
                            >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                        <android.support.v7.widget.CardView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">
                                                        <ImageView
                                                            android:id="@+id/on_tsel"
                                                            android:layout_width="100dp"
                                                            android:layout_height="100dp"
                                                            android:scaleType="centerInside"
                                                            android:layout_marginLeft="4dp"
                                                            android:layout_marginRight="4dp"
                                                            android:src="@drawable/telkomsel"/>
                                                        <FrameLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content">
                                                                <TextView
                                                                    android:layout_width="100dp"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="Telkomsel"
                                                                    android:layout_marginTop="4dp"
                                                                    android:layout_marginBottom="4dp"
                                                                    android:layout_marginLeft="8dp"
                                                                    />
                                                                <ImageButton
                                                                    android:id="@+id/op_tsel"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:src="@drawable/ic_dots"
                                                                    android:layout_gravity="right|end"
                                                                    android:background="@null"/>
                                                        </FrameLayout>

                                                </LinearLayout>
                                        </android.support.v7.widget.CardView>
                                        <android.support.v7.widget.CardView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">
                                                        <ImageView
                                                            android:id="@+id/on_isat"
                                                            android:layout_width="100dp"
                                                            android:layout_height="100dp"
                                                            android:scaleType="centerInside"
                                                            android:layout_marginLeft="4dp"
                                                            android:layout_marginRight="4dp"
                                                            android:src="@drawable/indosat"/>
                                                        <FrameLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content">
                                                                <TextView
                                                                    android:layout_width="100dp"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="Indosat"
                                                                    android:layout_marginTop="4dp"
                                                                    android:layout_marginBottom="4dp"
                                                                    android:layout_marginLeft="8dp"
                                                                    />
                                                                <ImageButton
                                                                    android:id="@+id/op_isat"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:src="@drawable/ic_dots"
                                                                    android:layout_gravity="right|end"
                                                                    android:background="@null"/>
                                                        </FrameLayout>
                                                </LinearLayout>
                                        </android.support.v7.widget.CardView>
                                        <android.support.v7.widget.CardView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">
                                                        <ImageView
                                                            android:id="@+id/on_xl"
                                                            android:layout_width="100dp"
                                                            android:layout_height="100dp"
                                                            android:scaleType="centerInside"
                                                            android:layout_marginLeft="4dp"
                                                            android:layout_marginRight="4dp"
                                                            android:src="@drawable/xl"/>
                                                        <FrameLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content">
                                                                <TextView
                                                                    android:layout_width="100dp"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="XL/Axis"
                                                                    android:layout_marginTop="4dp"
                                                                    android:layout_marginBottom="4dp"
                                                                    android:layout_marginLeft="8dp"
                                                                    />
                                                                <ImageButton
                                                                    android:id="@+id/op_xl"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:src="@drawable/ic_dots"
                                                                    android:layout_gravity="right|end"
                                                                    android:background="@null"/>
                                                        </FrameLayout>
                                                </LinearLayout>
                                        </android.support.v7.widget.CardView>
                                        <android.support.v7.widget.CardView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">
                                                        <ImageView
                                                            android:id="@+id/on_tri"
                                                            android:layout_width="100dp"
                                                            android:layout_height="100dp"
                                                            android:scaleType="centerInside"
                                                            android:layout_marginLeft="4dp"
                                                            android:layout_marginRight="4dp"
                                                            android:src="@drawable/tri"/>
                                                        <FrameLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content">
                                                                <TextView
                                                                    android:layout_width="100dp"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="Tri"
                                                                    android:layout_marginTop="4dp"
                                                                    android:layout_marginBottom="4dp"
                                                                    android:layout_marginLeft="8dp"
                                                                    />
                                                                <ImageButton
                                                                    android:id="@+id/op_tri"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:src="@drawable/ic_dots"
                                                                    android:layout_gravity="right|end"
                                                                    android:background="@null"/>
                                                        </FrameLayout>
                                                </LinearLayout>
                                        </android.support.v7.widget.CardView>
                                        <android.support.v7.widget.CardView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">
                                                        <ImageView
                                                            android:id="@+id/on_smart"
                                                            android:layout_width="100dp"
                                                            android:layout_height="100dp"
                                                            android:scaleType="centerInside"
                                                            android:layout_marginLeft="4dp"
                                                            android:layout_marginRight="4dp"
                                                            android:src="@drawable/smartfren"/>
                                                        <FrameLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content">
                                                                <TextView
                                                                    android:layout_width="100dp"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="Smartfren"
                                                                    android:layout_marginTop="4dp"
                                                                    android:layout_marginBottom="4dp"
                                                                    android:layout_marginLeft="8dp"
                                                                    />
                                                                <ImageButton
                                                                    android:id="@+id/op_smart"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:src="@drawable/ic_dots"
                                                                    android:layout_gravity="right|end"
                                                                    android:background="@null"/>
                                                        </FrameLayout>
                                                </LinearLayout>
                                        </android.support.v7.widget.CardView>
                                        <android.support.v7.widget.CardView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">
                                                        <ImageView
                                                            android:id="@+id/on_bolt"
                                                            android:layout_width="100dp"
                                                            android:layout_height="100dp"
                                                            android:scaleType="centerInside"
                                                            android:layout_marginLeft="4dp"
                                                            android:layout_marginRight="4dp"
                                                            android:src="@drawable/bolt"/>

                                                        <FrameLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content">
                                                                <TextView
                                                                    android:layout_width="100dp"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="Bolt"
                                                                    android:layout_marginTop="4dp"
                                                                    android:layout_marginBottom="4dp"
                                                                    android:layout_marginLeft="8dp"
                                                                    />
                                                                <ImageButton
                                                                    android:id="@+id/op_bolt"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:src="@drawable/ic_dots"
                                                                    android:layout_gravity="right|end"
                                                                    android:background="@null"/>
                                                        </FrameLayout>
                                                </LinearLayout>
                                        </android.support.v7.widget.CardView>

                                </LinearLayout>
                        </HorizontalScrollView>
                </android.support.v7.widget.CardView>
        </LinearLayout>
</ScrollView>
